# Copy this to k8s/secret.yaml and fill in your actual API key
# DO NOT COMMIT k8s/secret.yaml (it's gitignored)
#
# To create the secret from command line:
# kubectl create secret generic canada-tourist-secret \
#   --from-literal=OPENAI_API_KEY=sk-your-actual-key-here \
#   -n canada-tourist

apiVersion: v1
kind: Secret
metadata:
  name: canada-tourist-secret
  namespace: canada-tourist
type: Opaque
stringData:
  OPENAI_API_KEY: "sk-your-openai-api-key-here"
